{
  "name": "gamevoice",
  "version": "1.0.0",
  "description": "游戏语音实时同声翻译系统 - Real-time Voice Translation System for Gaming",
  "main": "dist/app/main.js",
  "author": "GameVoice Team",
  "license": "MIT",
  "private": true,
  "keywords": [
    "game",
    "voice",
    "translation",
    "real-time",
    "electron",
    "vue",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/gamevoice.git"
  },
  "bugs": {
    "url": "https://github.com/your-repo/gamevoice/issues"
  },
  "homepage": "https://gamevoice.com",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "build": "npm run build:renderer && npm run build:main && npm run build:native",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:native": "node-gyp rebuild",
    "start": "electron .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts,.tsx,.vue",
    "lint:fix": "eslint . --ext .ts,.tsx,.vue --fix",
    "format": "prettier --write \"**/*.{ts,tsx,vue,json,md}\"",
    "type-check": "tsc --noEmit",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "pinia": "^2.2.6",
    "pinia-plugin-persistedstate": "^3.2.1",
    "vue": "^3.5.5",
    "vue-i18n": "^9.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/test-utils": "^2.4.6",
    "@vitest/ui": "^1.6.0",
    "concurrently": "^8.2.2",
    "electron": "^31.3.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.19.2",
    "node-gyp": "^10.0.1",
    "prettier": "^3.1.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-plugin-electron": "^0.28.0",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "build": {
    "appId": "com.gamevoice.app",
    "productName": "GameVoice",
    "copyright": "Copyright © 2025 GameVoice Team",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GameVoice",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "license": "LICENSE"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png",
      "category": "Utility",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "gamevoice"
    }
  }
}
